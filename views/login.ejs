<%- include('./partials/navTop') %>


        <!-- CSS File Import -->
        <link rel="stylesheet" href="stylesheets/login.css">

        <div class="content">

            <div class="heading">
                <p>You are <span>just</span> a Step <span>away.</span></p>

                

            </div>

            <div class="box">

                <div class="innerBox">

                    <div class="top">
