<%- include('../partials/navLeft') %>

<div class="content">
    <style>
        :root {
            --background-color: #242424; 
            --nav-background-color : #161717; 
            --icon-color:#8C8C8C;
            --preview-background-color:#161717;
            --heading-color:white ; 
            --font-color:white;
            --boxes-bg-color: #0B0b0f;
            --box-count-color: #242424;
        }

        .light-mode {
            --background-color: #E3E3EA;
            --nav-background-color: #FFFFFF;
            --icon-color:#000000;
            --preview-background-color:#FFFFFF;
            --heading-color:black;
            --font-color:black;
            --boxes-bg-color:white;
            --box-count-color:#E3E3EA;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        body {
            display: flex;
        }

        .nav:hover + .content {
            margin-left: 250px;
                        
        }

        .content {
            width: calc(100vw - 80px);
            background-color: var(--background-color);
            min-height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            margin-left: 80px;
            transition: margin-left 0.3s;
        }

        .box {
            width: 50vw;
            height: 70vh;
            background-color: #363638;
            border-radius: 25px;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .box2 {
            width: 60%;
            height: 70%;
            background-color: #121417;
            border-radius: 25px;
            display: flex;
            flex-direction: column;
            gap: 2rem;
            align-items: center;
            padding-top: 2rem;
        }

        .issatisfied {
            width: 70%;
            height: 70%;
            border-radius: 25px;
            display: flex;
            flex-direction: column;
            gap: 1.3rem;
            align-items: center;
            font-family: "Overpass", sans-serif;
            padding: 0.5rem 0.5rem 0.5rem 0.5rem;
        }
        .issatisfied form{
            width: 100%;
            height: 70%;
            display: flex;
            flex-direction: column;
            gap: 0.5rem;
            justify-content: center;
            align-items: center;
        }
        .text {
            background-color: #D9D9D9;
            display: flex;
            justify-content: center;
            align-items: center;
        }
        h2 {
            font-family: "Overpass", sans-serif;
            font-size: 28px;
            color: white;
        }

        .issatisfied p, .notSatisfied p {
            font-size: 18px;
            color: #959494;
            margin-left: 1.5rem;
        }

        .notSatisfied {
            display: none;
            width: 80%;
            height: 70%;
            border-radius: 25px;
            display: flex;
            flex-direction: column;
            font-family: "Overpass", sans-serif;
            padding: 0.5rem 0.5rem 0.5rem 0.5rem;
        }

        .notSatisfied form{
            width: 100%;
            height: 35vh;
            display: flex;
            flex-direction: column;
            gap: 0.2rem;
            align-items: center;
        }

        select {
            width: 60%;
            height: 10%;
            border: 1px solid white;
            background-color: transparent;
            color: white;
            padding: 0.5rem 1rem 0.5rem 1rem;
            font-family: "Overpass", sans-serif;
            font-size: 20px;
            border-radius: 10px;
            font-weight: bold;
        }
        select option {
            color: black;
        }

        textarea {
            background: transparent;
            resize: none;
            border: 1px solid white;
            font-family: "Overpass", sans-serif;
            font-size: 18px;
            padding: 1rem;
            height: 22vh;
            width: 95%;
            color: white;
            border-radius: 10px;
            margin-bottom: 1rem;
        }

        .star-rating {
            display: flex;
            gap: 0.2rem;
            flex-direction: row-reverse;
            justify-content: center;
        }

        .star {
            font-size: 4rem;
            color: #ddd;
            cursor: pointer;
            position: relative;
        }

        .star::before {
            content: '★';
            position: absolute;
            left: 0;
            color: gold;
            opacity: 0;
        }

        .star:hover ~ .star::before,
        .star:hover::before,
        .star.selected ~ .star::before,
        .star.selected::before {
            opacity: 1;
        }

        .star::after {
            content: '☆';
        }

        input[type="submit"] {
            width: 100%;
            height: 100%;
            padding: 0.8rem 0.8rem 0.8rem 0.8rem;
            font-size: 20px;
            background-color: #D9D9D9;
            border: none;
            color: black;
            border-radius: 10px;
        }
    </style>

    <div class="box">
        <div class="box2">
            <select name="satisfied" id="dd">
                <option value="satisfied">Satisfied</option>
                <option value="not satisfied">Not Satisfied</option>
            </select>
            
            <div class="issatisfied">
                <h2>Hey Drop some Rating!</h2>
                <p>Your feedback helps us make better future decession for you.</p>
                <form action="/user/endComplaint/<%= id %>" method="post">
                    <div class="star-rating">
                        <span class="star" data-value="5"></span>
                        <span class="star" data-value="4"></span>
                        <span class="star" data-value="3"></span>
                        <span class="star" data-value="2"></span>
                        <span class="star" data-value="1"></span>
                    </div>
                    <input type="hidden" name="rating" id="rating" value="0">
                    <div>
                        <input type="submit" value="Close Complaint">
                    </div>
                </form>
            </div>

            <div class="notSatisfied">
                <p>Cause : </p>
                    
                <form action="/user/relodgeComplaint/<%= id %>" method="post">
                    

                    <textarea name="cause" rows="4" cols="50" placeholder="Please describe the cause of your complaint"></textarea>
                    <div>
                        <input type="submit" value="Close Complaint">
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const stars = document.querySelectorAll('.star');
            const selectElement = document.getElementById('dd');
            const satisfiedDiv = document.querySelector('.issatisfied');
            const notSatisfiedDiv = document.querySelector('.notSatisfied');
            const ratingInput = document.getElementById('rating');

            // Set initial visibility based on the default selection
            updateVisibility(selectElement.value);

            // Add event listener for the select element
            selectElement.addEventListener('change', (event) => {
                updateVisibility(event.target.value);
            });

            stars.forEach(star => {
                star.addEventListener('click', setRating);
                star.addEventListener('mouseover', addHoverEffect);
                star.addEventListener('mouseleave', removeHoverEffect);
            });

            function setRating(e) {
                const selectedValue = parseInt(e.target.getAttribute('data-value'));
                stars.forEach(star => {
                    const value = parseInt(star.getAttribute('data-value'));
                    if (value <= selectedValue) {
                        star.classList.add('selected');
                    } else {
                        star.classList.remove('selected');
                    }
                });
                ratingInput.value = selectedValue;
                
            }

            function addHoverEffect(e) {
                const hoverValue = parseInt(e.target.getAttribute('data-value'));
                stars.forEach(star => {
                    const value = parseInt(star.getAttribute('data-value'));
                    if (value <= hoverValue) {
                        star.classList.add('hover');
                    } else {
                        star.classList.remove('hover');
                    }
                });
            }

            function removeHoverEffect() {
                stars.forEach(star => {
                    star.classList.remove('hover');
                });
            }

            function updateVisibility(selectedValue) {
                if (selectedValue === 'satisfied') {
                    satisfiedDiv.style.display = 'flex';
                    notSatisfiedDiv.style.display = 'none';
                } else {
                    satisfiedDiv.style.display = 'none';
                    notSatisfiedDiv.style.display = 'flex';
                }
            }
        });
    </script>
</body>
</html>
