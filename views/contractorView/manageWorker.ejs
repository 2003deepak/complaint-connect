<%- include('../partials/navLeft') %>


<div class="content">

    <style>
        * {
            margin: 0;
            padding: 0;
        }

        .nav:hover + .content {
            margin-left: 250px;
        }

        .content {
            width: calc(100vw - 80px);
            background-color: var(--background-color);
            min-height: 100vh;
            height: auto;
            display: flex;
            flex-direction: column;
            margin-left: 80px; /* Initial margin-left to match the nav width */
            transition: margin-left 0.3s; /* Add transition for a smooth effect */
        }

        .table-container {
            width: 80%;
            max-width: 1200px;
            margin: 20px auto;
            margin-left: 5vw;
            padding: 20px;
            border-radius: 8px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
            color: #fff;
        }

        th, td {
            text-align: left;
            padding: 8px;
            border-bottom: 1px solid #555;
        }

        th {
            background-color: #FF9F00;
            color: white;
        }

        tr:hover {
            background-color: #444;
        }

        @media (max-width: 768px) {
            th, td {
                padding: 8px;
            }
        }

        @media (max-width: 480px) {
            .table-container {
                width: 100%;
                margin: 10px;
                padding: 10px;
            }

            table, th, td {
                display: block;
                width: 100%;
            }

            th, td {
                text-align: right;
                padding: 8px;
                position: relative;
            }

            th::after, td::before {
                position: absolute;
                left: 0;
                width: 50%;
                padding: 8px;
                text-align: left;
                font-weight: bold;
                background-color: #333;
                border-bottom: 1px solid #555;
            }

            th::after {
                content: '';
            }

            .actions {
                text-align: center;
            }
        }
    </style>
    <div class="table-container">
        <table class="table table-dark table-hover">
            <thead>
                <tr>
                    <th>Username</th>
                    <th>Email ID</th>
                    <th>Aadhar Card</th>
                    <th>Work Area</th>
                    <th>Delete Worker</th>
                </tr>
            </thead>
            <tbody>
                <% workers.forEach((worker)=>{ %>

                    <tr>
                        <td><%= worker.username %></td>
                        <td><%= worker.email %></td>
                        <td><a href="/userUpload/aadhar_card/<%= worker.aadhar_card %>" target = "_blank"><img src="/images/Filetype Icon.svg"  alt="" height="28px"></a></td>
                        <td><%= worker.work_area %></td>
                        <td><a type="button" class="btn btn-danger btn-sm" href="/contractor/manageWorker/deleteWorker/<%= worker._id %>">Delete</a></td>
                        
                    </tr>

               <% }) %>
               
                    
               
            </tbody>
        </table>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
