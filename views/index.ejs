                </div>
                <div>
                    <h3>Gym</h3>
                    <img src="../images/plumber.svg" alt="">
                    <p>Machines not working ?</p>
                </div>
            </div>
            

            <!-- Contact Section -->
            
            <div class="contact" id="contact">
                <div class="center">
                    <h1>Have a Question?</h1>
                    <img src="../images/Vector 131.svg" alt="">
                    <form action="">
                        <p>Feel free to contact us at hello@complainconnect.com or write your message below</p>
                        <div class="name">
                            <input type="text" placeholder="FULL NAME">
                        </div>
                        <div class="email">
                            <input type="email" placeholder="EMAIL">
                        </div>
                        <div class="textarea">
                            <textarea name="" id="" placeholder="MESSAGE" cols="20"></textarea>
                        </div>
                        <div class="submit">
                            <input type="submit" value="SEND">
                        </div>
                    </form>
                </div>
            </div>
            

