            <!-- Work Section -->
            
            <div class="work">
                <div>
                    <h3>Lights</h3>
                    <img src="../images/light.svg" alt="">
                    <p>Lights not working ?</p>
                </div>
                <div>
                    <h3>Plumbing</h3>
                    <img src="../images/plumber.svg" alt="">
                    <p>Pipe got stuck ?</p>
                </div>
                <div>
                    <h3>Swimming Pool</h3>
                    <img src="../images/swimmimg.svg" alt="">
