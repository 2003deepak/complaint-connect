<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/stylesheets/user/dashboard.css">
    <link rel="stylesheet" href="/stylesheets/navLeft.css">

    <!-- Dm Sans  -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=DM+Sans:ital,opsz,wght@0,9..40,100..1000;1,9..40,100..1000&display=swap" rel="stylesheet">

    <!-- Poppins  -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Biryani&family=Poppins:wght@400;500&display=swap" rel="stylesheet">

    <!-- Biryani  -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Biryani&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />


    <!-- Inter -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@100..900&display=swap" rel="stylesheet">

   <!-- Overpass  -->
   <link rel="preconnect" href="https://fonts.googleapis.com">
   <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
   <link href="https://fonts.googleapis.com/css2?family=Overpass:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">

   <!-- Include jQuery library -->
   <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>


  
</head>
<body>

    <div class="main">
      


        <!-- Nav bar Starts for here -->
        <%- include('../partials/navLeft') %>

        <div class="content">

            <i class="fa-solid fa-bars" id="toggle"></i>

            <div class="cinfo">
                <h1>Worker</h1>
                <p>Lorem ipsum </p>
            </div>

            <div class="ctop">

                <div class="box">
                    <p>New Request</p>
                    <div class="count">
                        <p style="color : #FF5858;"><%= newComplaint.length %></p>
                    </div>

                </div>

                <div class="box">
                    <p>In Progress</p>
                    <div class="count">
                        <p style="color : #FF9F00;" ><%= pendingComplaint.length %></p>
                    </div>

                </div>

                <div class="box">
                    <p>Completed</p>
                    <div class="count">
                        <p style="color : #05FF00;" ><%= completedComplaint.length %></p>
                    </div>

                </div>


            </div>
            <div class="cline"></div>
            <div class="cbtm">


                <div class="data">

                    <div class="newComplaint">

                        <div class="text">
    
                            <div class = "textcircle" style="background-color: #FF5858;"></div>
        
                            <p>New Request</p>
                            <div class="dd">
                                <i class="fa-solid fa-caret-down"></i>
                            </div>
                            
                            
        
                        </div>

                        <% if(newComplaint.length > 0) {

                            newComplaint.forEach((complaint) => { %>

                                <div class="complaintData" >

                                    <div class="left" >
                                        <div class = "textcircle" style="background-color: #FF5858;"></div>
        
                                    </div>
                                    <div class="middle">
                                        <p>Complaint ID: <%= complaint.complaintId.complaintId %> </p>
                                        <p>Complaint Type: <%= complaint.complaintId.complaintType %> </p>
                                        <p>Subject: <%= complaint.complaintId.subject %> </p>
        
                                    </div>
                                    <div class="view-details" >
        
                                        <i class="fa-solid fa-greater-than fa-fade" data-complaint-id="<%= complaint.complaintId.complaintId %>" style="color: #ffbc39;" id="previewContent" ></i>
        
        
        
                                    </div>
        
                                </div>
    
                                
    
                            <% }); %>
    
                        <% } else { %>
    
                            <!-- Display a blank area if there are no new complaints -->
                            <div class="blank-area"></div>
    
                        <% } %>  
    
                        
                        
    
                    </div>
                    <div class="pendingComplaint">

                        <div class="text">
                            <div class = "textcircle" style="background-color: #F4DD0E;"></div>
                            <p>In Progress</p>

                            <div class="dd">
                                <i class="fa-solid fa-caret-down"></i>
                            </div>
                            
                            
                        </div>

                        <% if (pendingComplaint.length > 0) { %>

                            <% pendingComplaint.forEach((complaint) => { 
                                let priorityStyle = (complaint.isPriority) ? 'border: 1.5px solid red; animation: blink 1s infinite;' : '';
                            %>

                            <div class="complaintData" >

                                <div class="left" >
                                    <div class = "textcircle" style="background-color: #F4DD0E;"></div>
    
                                </div>
                                <div class="middle">
                                    <p>Complaint ID: <%= complaint.complaintId.complaintId %> </p>
                                    <p>Complaint Type: <%= complaint.complaintId.complaintType %> </p>
                                    <p>Subject: <%= complaint.complaintId.subject %> </p>
    
                                </div>
                                <div class="view-details" >
    
                                    <i class="fa-solid fa-greater-than fa-fade" data-complaint-id="<%= complaint.complaintId.complaintId %>"  style="color: #ffbc39;" id="previewContent"></i>
    
    
    
                                </div>
    
                            </div>
                        
                            
                        
                            <% }); %>
                        
                        <% } else { %>
                        
                            <!-- Display a blank area if there are no new complaints -->
                            <div class="blank-area"></div>
                        
                        <% } %>

                        
    
                        
                        
    
                    </div>
                    <div class="completeComplaint">

                        <div class="text">
                            <div class = "textcircle" style="background-color: #05FF00;"></div>
                            <p>Completed</p>

                            <div class="dd">
                                <i class="fa-solid fa-caret-down"></i>
                            </div>
                            
                            
                        </div>

                        <% if(completedComplaint.length > 0) {

                            completedComplaint.forEach((complaint) => { %>

                                <div class="complaintData" >

                                    <div class="left" >
                                        <div class = "textcircle" style="background-color: #05FF00;"></div>
        
                                    </div>
                                    <div class="middle">
                                        <p>Complaint ID: <%= complaint.complaintId.complaintId %> </p>
                                        <p>Complaint Type: <%= complaint.complaintId.complaintType %> </p>
                                        <p>Subject: <%= complaint.complaintId.subject %> </p>
        
                                    </div>
                                    <div class="view-details" >
        
                                        <i class="fa-solid fa-greater-than fa-fade" data-complaint-id="<%= complaint.complaintId.complaintId %>" style="color: #ffbc39;" id="previewContent" ></i>
        
        
        
                                    </div>
        
                                </div>
    
                                
                
    
    
                                
    
                            <% }); %>
    
                        <% } else { %>
    
                            <!-- Display a blank area if there are no new complaints -->
                            <div class="blank-area"></div>
                            
                        <% } %>   
    
                        
                        

                    </div>
                    
                    
    
    
                </div>



            </div>






        </div>
        <div class="preview">



        </div>



        <script src="/javascripts/lightToggle.js"></script>
        <script src="/javascripts/previewContent.js"></script> 



</body>
</html>


      